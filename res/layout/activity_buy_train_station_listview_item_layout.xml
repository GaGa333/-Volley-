<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <TextView
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:id="@+id/tv_stationCode_listView_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="武汉" />

    <TextView
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginLeft="90dp"
        android:id="@+id/tv_stationCode_listView_stopTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2分钟" />
    
    
    <com.gcc.taotaopiao.CustomWidget.MyCricleView
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_stationCode_listView_myCricleView"
        android:layout_width="16dp"
        android:layout_height="16dp" />
    
    <TextView
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="#373737"
        android:layout_below="@+id/tv_stationCode_listView_myCricleView"
        android:id="@+id/tv_stationCode_listView_line"
        android:layout_width="2dp"
        android:layout_height="match_parent" 
        android:text=""/>
    

    <TextView
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/tv_stationCode_listView_startTime"
        android:id="@+id/tv_stationCode_listView_arrivalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:53" />

    <TextView
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_stationCode_listView_startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:53" />

</RelativeLayout>
