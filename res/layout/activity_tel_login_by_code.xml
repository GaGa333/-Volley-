<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.TelLoginByCodeActivity" >
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:background="#F6F6F6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_tel_login_code_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/icon_back2" />

        <TextView
            android:gravity="center"
            android:layout_centerInParent="true"
             android:textSize="22sp"
            android:id="@+id/tv_tel_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机登录" />
    </RelativeLayout>

    <com.gcc.taotaopiao.CustomWidget.Code
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/btn_tel_login_show"
        android:id="@+id/code"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:background="@drawable/button_login_by_password_selector"
        android:text="登录"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:id="@+id/btn_tel_login_show"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="show" />
</RelativeLayout>
