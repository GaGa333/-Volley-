<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginByPasswordActivity" >

    <TextView
        android:textSize="22sp"
        android:background="#F6F6F6"
        android:id="@+id/tv_logon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="登录tao淘票" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="20dp"
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_alignParentBottom="true"
                android:id="@+id/iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_user" />

            <EditText
                android:layout_alignParentBottom="true"
                android:background="@null"
                android:layout_toRightOf="@+id/iv_phone"
                android:layout_toStartOf="@+id/iv_end"
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入8~16位的账号"
                android:gravity="bottom" 
                android:layout_alignWithParentIfMissing="true"
                />

            <ImageView
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />

        </RelativeLayout>

        <TextView
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:id="@+id/textView1"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:text="" />

        <RelativeLayout
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_account_list" />

            <EditText
                android:gravity="top"
                android:layout_toLeftOf="@+id/iv_password_find"
                android:layout_toRightOf="@+id/iv_password"
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="请输入8~16位的密码" 
                android:background="@null"
                android:inputType="textPassword"
                >

                <requestFocus />
            </EditText>

            <CheckBox
                android:background="@drawable/password"
                android:button="@drawable/ic_login_password_normal"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_password_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

        </RelativeLayout>

        <CheckBox
            android:layout_marginLeft="36dp"
            android:layout_marginTop="10dp"
            android:id="@+id/Cb_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住账号" />

        <Button
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:id="@+id/b_logon"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/button_login_by_password_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录" />

        <RadioButton
            android:gravity="center"
            android:layout_marginRight="36dp"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:layout_gravity="right"
            android:id="@+id/rb_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？" />

    </LinearLayout>

</LinearLayout>

