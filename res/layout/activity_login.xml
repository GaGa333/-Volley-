<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity" >

    <RelativeLayout
        android:padding="16dp"
        android:background="#F6F6F6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_login_delete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_delete" />

        <TextView
            android:gravity="center"
            android:layout_centerInParent="true"
             android:textSize="22sp"
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录tao淘票" />

        <TextView
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册" />

    </RelativeLayout>

    <RelativeLayout
        android:background="#FFFFFF"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:textColor="#E1E1E1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="36dp"
            android:layout_above="@+id/rl_login_lock"
            android:id="@+id/tv_login_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐登录方式" />

        <RelativeLayout
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="#5495E5"
            android:id="@+id/rl_login_lock"
            android:layout_marginBottom="36dp"
            android:layout_above="@+id/tv_or"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lock" />

                <TextView
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   账号登录" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/but_login_tel"
            android:layout_marginBottom="36dp"
            android:textColor="#E1E1E1"
            android:gravity="center"
            android:id="@+id/tv_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="或" />

        <Button
            android:layout_centerInParent="true"
            android:textColor="#9D9D9D"
            android:background="@drawable/login_tellogin_button_selector"
            android:textSize="18sp"
            android:id="@+id/but_login_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用手机号登录" />

        <TextView
            android:textColor="#5495E5"
            android:layout_centerHorizontal="true"
             android:layout_marginTop="48dp"
            android:layout_below="@+id/but_login_tel"
            android:gravity="center"
            android:id="@+id/tv_login_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用其它方式登录" />

        <TextView
            android:background="#D0D0D0"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/tv_login_other"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_login_other_line"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:text="" />

        <RelativeLayout
            android:layout_marginTop="24dp"
            android:layout_below="@+id/tv_login_other_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_marginLeft="36dp"
                android:layout_centerVertical="true"
                android:id="@+id/iv_login_xlwb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_xlwb" />

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_login_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_qq" />

            <ImageView
                android:layout_marginRight="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/iv_login_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wx" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>