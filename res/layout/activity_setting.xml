<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/city_content_text_bg"
    android:orientation="vertical"
    tools:context="com.yuqs.filmticket.Activity.SettingActivity">

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_context_bg"
        android:gravity="center_vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="@string/setting_update"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_setting_about_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_context_bg"
        android:gravity="center_vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="@string/setting_about"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1.0dip"
        android:layout_marginLeft="20dp"
        android:background="@drawable/setting_context_middle_line" />

    <LinearLayout
        android:id="@+id/ll_setting_QQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_context_bg_without_arrow"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:text="客服QQ"
            android:textColor="@color/TextColorGray"
            android:textSize="16sp" />

        <TextView
             android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:gravity="end"
            android:text="此处显示客服QQ"
            android:textColor="@color/TextColorGray"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
        android:layout_height="1.0dip"
        android:layout_marginLeft="20dp"
        android:background="@drawable/setting_context_middle_line" />

    <LinearLayout
        android:id="@+id/ll_setting_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_context_bg_without_arrow"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:text="客服电话 "
            android:textColor="@color/TextColorGray"
            android:textSize="16sp" />

        <TextView
             android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="@string/telephone_num"
            android:textColor="@color/TextColorGray"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_protocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_context_bg"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="用户协议"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ll_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_context_bg"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="清除缓存"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="(包括数据和图片)"
            android:textColor="@color/TextColorGray"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>